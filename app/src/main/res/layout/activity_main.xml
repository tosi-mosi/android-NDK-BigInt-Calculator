<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView
            android:id="@+id/result_text"
            android:layout_width="295dp"
            android:layout_height="48dp"
            android:text="Hello World!"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.128"
            android:gravity="center" android:textSize="18sp"/>
    <TextView
            android:text="@string/input_expression"
            android:layout_width="149dp"
            android:layout_height="31dp" android:id="@+id/input_prompt"
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@+id/input_text" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="36dp" android:layout_marginStart="36dp"/>
    <EditText
            android:layout_width="340dp"
            android:layout_height="84dp"
            android:inputType="textMultiLine"
            android:gravity="start|top"
            android:ems="10"
            android:id="@+id/input_text"
            app:layout_constraintTop_toBottomOf="@+id/result_text"
            android:layout_marginTop="80dp" app:layout_constraintStart_toStartOf="parent"
            android:lines="3"
            android:autofillHints="@string/input_example_hint" app:layout_constraintEnd_toEndOf="parent"
            android:textSize="18sp"/>
    <TextView
            android:text="@string/result_prompt"
            android:layout_width="90dp"
            android:layout_height="28dp" android:id="@+id/textView3"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="56dp"
            android:layout_marginStart="56dp" android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@+id/result_text"/>
    <Button
            android:id="@+id/calculate_button_text"
            android:text="@string/calculate_button_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/input_text"
            android:layout_marginTop="20dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="160dp" android:layout_marginStart="160dp" android:textSize="24sp"/>

</androidx.constraintlayout.widget.ConstraintLayout>